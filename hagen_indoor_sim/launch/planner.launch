<?xml version="1.0"?>
<launch>

<!-- Navigation -->
  <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen">

    <rosparam file="$(find hagen_indoor_sim)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find hagen_indoor_sim)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find hagen_indoor_sim)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />   
    <rosparam file="$(find hagen_indoor_sim)/param/local_costmap_params.yaml" command="load" />   
    <rosparam file="$(find hagen_indoor_sim)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find hagen_indoor_sim)/param/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find hagen_indoor_sim)/param/navfn.yaml" command="load" />

    <param name="global_costmap/global_frame" value="map"/>
    <param name="global_costmap/robot_base_frame" value="base_link"/>
    <param name="local_costmap/global_frame" value="odom"/>
    <param name="local_costmap/robot_base_frame" value="base_link"/>

    <remap from="odom" to="odometry/filtered" />

  </node>
  

</launch>