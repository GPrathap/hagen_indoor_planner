<launch>

  <arg name="enable_ekf" default="$(optenv ENABLE_EKF true)"/>

  <rosparam command="load" file="$(find hagen_control)/config/control.yaml" />

  <node name="controller_spawner" pkg="controller_manager" type="spawner" output="screen"
        args="hagen_joint_publisher hagen_velocity_controller hagen_fork_controller" />

  <group if="$(arg enable_ekf)" >
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization">
      <rosparam command="load" file="$(find hagen_control)/config/robot_localization.yaml" />
    </node>

    <group if="$(optenv hagen_GX5_IMU 0)">
      <!-- Optionally load the configuration for the secondary GX5-family IMU -->
      <rosparam command="load" file="$(find hagen_control)/config/robot_localization_gx5.yaml" />
    </group>
  </group>

  <node pkg="twist_mux" type="twist_mux" name="twist_mux">
    <rosparam command="load" file="$(find hagen_control)/config/twist_mux.yaml" />
    <remap from="cmd_vel_out" to="hagen_velocity_controller/cmd_vel"/>
  </node>

  <group if="$(optenv hagen_CONTROL_EXTRAS 0)" >
    <rosparam command="load" file="$(env hagen_CONTROL_EXTRAS_PATH)" />
  </group>
</launch>
